    <script>
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –µ–¥–∏–Ω–∏—Ü –≤ —Å–µ—Ä–¥–µ—á–∫–∞—Ö
        function fillHeart(elementId, count) {
            const heart = document.getElementById(elementId);
            let html = '';
            for (let i = 0; i < count; i++) {
                const delay = Math.random() * 2;
                html += `<span class="digit" style="animation-delay: ${delay}s;">1</span>`;
            }
            heart.innerHTML = html;
        }

        // –ó–∞–ø–æ–ª–Ω—è–µ–º –≤—Å–µ —Å–ª–æ–∏ —Å–µ—Ä–¥—Ü–∞
        fillHeart('heart1', 200);
        fillHeart('heart2', 180);
        fillHeart('heart3', 160);
        fillHeart('heart4', 140);
        fillHeart('heart5', 120);

        // –°–æ–∑–¥–∞–Ω–∏–µ –ª–µ—Ç–∞—é—â–∏—Ö —á–∞—Å—Ç–∏—Ü
        function createParticle() {
            const particles = document.getElementById('particles');
            const particle = document.createElement('span');
            particle.className = 'particle';
            particle.textContent = Math.random() > 0.5 ? '1' : '‚ù§';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.animationDuration = (3 + Math.random() * 4) + 's';
            particle.style.fontSize = (12 + Math.random() * 16) + 'px';
            particles.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 8000);
        }

        // –ó–∞–ø—É—Å–∫–∞–µ–º —á–∞—Å—Ç–∏—Ü—ã
        setInterval(createParticle, 300);

        // –ù–∞—á–∞–ª—å–Ω—ã–µ —á–∞—Å—Ç–∏—Ü—ã
        for (let i = 0; i < 20; i++) {
            setTimeout(createParticle, i * 150);
        }
    </script>
